<html lang="en">
<%- include("partials/header") %>
<body>
<div class="table-container">
    <h2 class="todo-title"> Update todo </h2>

    <div>
        <a href="/"> Back </a>

        <form action="/updateTodo/<%= todo._id %>" method="post">
            <div>
                <div>
                    <div class="from-group">
                        <label for="title"> Title </label>
                        <input type="text" name="title" id="" placeholder="type todo here" value="<%= todo.title %>" />
                    </div>

                    <div class="from-group">
                        <label for="title"> Description </label>
                        <input type="text" name="description" id="" placeholder="type description here" value="<%= todo.desc %>"/>
                    </div>

                    <div class="from-group">
                        <button type="submit"> Update Todo</button>
                    </div>
                </div>

            </div>

        </form>
    </div>
</div>
</body>
</html>