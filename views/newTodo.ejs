<html lang="en">
<%- include("partials/header")%>
<body>
    <div class="container col-12">
        <h2 class="text-center fw-bold mb-5"> Add todo </h2>

        <div>
            <form action="/addTodo" method="post">
                <div>
                    <div>
                        <div class="from-group mb-3">
                            <label for="title" class="col-12 fw-bold mb-2"> Title </label>
                            <input type="text" name="title" id="" placeholder="type todo here" class="col-12 form-control outline-none shadow-none border-dark-subtle"/>
                        </div>

                        <div class="from-group">
                            <label for="desc" class="col-12 fw-bold mb-2"> Description </label>
                            <input type="text" name="desc" id="" placeholder="type description here" class="col-12 form-control outline-none shadow-none border-dark-subtle" />
                        </div>

                        <div class="col-12 text-center mt-5">
                            <button type="submit" class="btn btn-dark btn-sm w-25"> Save </button>
                        </div>
                    </div>

                </div>

            </form>
        </div>
    </div>
</body>
</html>